{
    "mem": 2050.0,
    "cpus": 2.0,
    "maxLaunchDelaySeconds": 300,
    "container": {
	    "type": "DOCKER",
	    "docker": {
	      "image": "mesosphere/marathon:v0.8.2-RC4",
	      "network": "HOST",
        "parameters": [{ "key": "entrypoint", "value": "/bin/bash"}]
	    }
    },
    "args": [
      "-c", "./bin/start --framework_name marathon-0.8.2-RC4 --zk _zk_/_zkdir_ --master _zk_/mesos --http_port $PORT --max_tasks_per_offer 50"
    ],
    "instances": 2,
    "constraints": [ ["hostname", "UNIQUE"]]
}

